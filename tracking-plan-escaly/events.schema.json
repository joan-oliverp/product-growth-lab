{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Escaly Tracking Plan Schema",
  "type": "object",
  "required": ["name", "version", "events"],
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "description": { "type": "string" },

    "identifiers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string" },
          "required": { "type": "boolean" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "cross_event_properties": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string" },
          "pii": { "type": "boolean" },
          "description": { "type": "string" },
          "enum": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    },

    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["event", "version", "owner", "authority", "description", "properties"],
        "properties": {
          "event": {
            "type": "string",
            "pattern": "^[a-z0-9]+(_[a-z0-9]+)*$",
            "description": "Event name in snake_case"
          },
          "version": { "type": "string" },
          "owner": { "type": "string" },
          "authority": { "type": "string", "enum": ["client", "server"] },
          "description": { "type": "string" },
          "triggers": { "type": "string" },
          "required_identifiers": {
            "type": "array",
            "items": { "type": "string" }
          },
          "properties": {
            "type": "object",
            "patternProperties": {
              "^[a-z0-9]+(_[a-z0-9]+)*$": {
                "oneOf": [
                  {
                    "type": "object",
                    "required": ["type", "description"],
                    "properties": {
                      "type": { "type": "string" },
                      "required": { "type": "boolean" },
                      "pii": { "type": "boolean" },
                      "description": { "type": "string" },
                      "enum": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    },
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "required": ["use"],
                    "properties": {
                      "use": {
                        "type": "string",
                        "enum": ["cross_event_properties"],
                        "description": "Reference to a property defined in top-level cross_event_properties"
                      }
                    },
                    "additionalProperties": false
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },

    "derived_signals": {
      "type": "object",
      "description": "Warehouse-derived aggregates used as canonical signals in analysis (e.g., org_weekly_active).",
      "additionalProperties": false,
      "patternProperties": {
        "^[a-z0-9]+(_[a-z0-9]+)*$": {
          "type": "object",
          "description": "Definition for a derived signal (e.g., org_weekly_active).",
          "additionalProperties": false,
          "required": ["authority", "definition", "identifiers", "properties"],
          "properties": {
            "authority": {
              "type": "string",
              "const": "warehouse",
              "description": "Indicates this signal is computed in the warehouse."
            },
            "definition": {
              "type": "string",
              "minLength": 10
            },
            "identifiers": {
              "type": "array",
              "description": "Signal-level identifiers used for joins; must include account_id.",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(_[a-z0-9]+)*$" },
              "minItems": 1,
              "uniqueItems": true,
              "allOf": [
                { "contains": { "const": "account_id" } }
              ]
            },
            "properties": {
              "type": "object",
              "description": "Fields emitted by this signal.",
              "additionalProperties": true,
              "required": ["week_start_at"],
              "properties": {
                "week_start_at": {
                  "type": "string",
                  "format": "date-time",
                  "description": "ISO 8601 timestamp for the ISO week start (Monday 00:00:00)."
                },
                "active_user_count": {
                  "type": "integer",
                  "minimum": 0
                },
                "has_generated_report": {
                  "type": "boolean"
                }
              }
            },
            "qualifying_events": {
              "type": "array",
              "description": "Optional: list of source event names used to compute this signal.",
              "items": { "type": "string", "pattern": "^[a-z0-9]+(_[a-z0-9]+)*$" },
              "uniqueItems": true
            }
          }
        }
      }
    }
  },
  "additionalProperties": true
}
