{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Escaly Tracking Plan Schema",
  "type": "object",
  "required": ["name", "version", "events"],
  "properties": {
    "name": { "type": "string" },
    "version": { "type": "string" },
    "generated_at": { "type": "string", "format": "date-time" },
    "description": { "type": "string" },

    "identifiers": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string" },
          "required": { "type": "boolean" },
          "description": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "cross_event_properties": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "description"],
        "properties": {
          "type": { "type": "string" },
          "pii": { "type": "boolean" },
          "description": { "type": "string" },
          "enum": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": false
      }
    },

    "events": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["event", "version", "owner", "authority", "description", "properties"],
        "properties": {
          "event": {
            "type": "string",
            "pattern": "^[a-z0-9]+(_[a-z0-9]+)*$",
            "description": "Event name in snake_case"
          },
          "version": { "type": "string" },
          "owner": { "type": "string" },
          "authority": { "type": "string", "enum": ["client", "server"] },
          "description": { "type": "string" },
          "triggers": { "type": "string" },
          "required_identifiers": {
            "type": "array",
            "items": { "type": "string" }
          },
          "properties": {
            "type": "object",
            "patternProperties": {
              "^[a-z0-9]+(_[a-z0-9]+)*$": {
                "oneOf": [
                  {
                    "type": "object",
                    "required": ["type", "description"],
                    "properties": {
                      "type": { "type": "string" },
                      "required": { "type": "boolean" },
                      "pii": { "type": "boolean" },
                      "description": { "type": "string" },
                      "enum": {
                        "type": "array",
                        "items": { "type": "string" }
                      }
                    },
                    "additionalProperties": false
                  },
                  {
                    "type": "object",
                    "required": ["use"],
                    "properties": {
                      "use": {
                        "type": "string",
                        "enum": ["cross_event_properties"],
                        "description": "Reference to a property defined in top-level cross_event_properties"
                      }
                    },
                    "additionalProperties": false
                  }
                ]
              }
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    },

    "derived_signals": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_]+$": {
          "type": "object",
          "required": ["authority", "definition", "identifiers", "properties", "qualifying_events"],
          "properties": {
            "authority": {
              "type": "string",
              "description": "Source system or data authority (e.g., 'warehouse')."
            },
            "definition": {
              "type": "string",
              "description": "Human-readable explanation of the derived signal."
            },
            "identifiers": {
              "type": "array",
              "items": { "type": "string" },
              "description": "Primary key or entity identifiers used to group signal data."
            },
            "properties": {
              "type": "object",
              "minProperties": 1,
              "additionalProperties": {
                "type": "object",
                "required": ["type", "description"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["timestamp", "integer", "boolean", "string", "number"],
                    "description": "The data type of the property value."
                  },
                  "description": {
                    "type": "string",
                    "description": "Description of the property and its semantics."
                  }
                },
                "additionalProperties": false
              },
              "description": "A map of property names to their metadata definitions."
            },
            "qualifying_events": {
              "type": "array",
              "items": { "type": "string" },
              "description": "List of event types that contribute to this derived signal."
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "additionalProperties": false
  },
  "additionalProperties": true
}
