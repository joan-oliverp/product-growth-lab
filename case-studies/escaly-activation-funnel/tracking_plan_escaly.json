{
  "product": "Escaly",
  "version": "1.0.0",
  "owner": "Joan Oliver Poyatos",
  "updated_at": "2025-09-04T17:30:10.655956Z",
  "activation_definition": {
    "name": "Activation v1",
    "description": "User is activated when they generate their first report within 7 days of Signup.",
    "window_days": 7,
    "entry_event": "Signup",
    "exit_event": "GenerateReport"
  },
  "global_properties": {
    "user_id": "string",
    "account_id": "string|null",
    "cohort": "enum[A,B]",
    "role": "enum[Admin,Technician,Other]",
    "ts": "ISO-8601 timestamp"
  },
  "events": [
    {
      "name": "Signup",
      "description": "Admin or technician creates an account.",
      "required_properties": [
        "role"
      ],
      "properties": {
        "role": "enum[Admin,Technician,Other]",
        "utm_source": "string|null",
        "utm_campaign": "string|null"
      },
      "category": "Acquisition"
    },
    {
      "name": "CreateUser",
      "description": "Admin creates the first internal user (technician).",
      "required_properties": [
        "count"
      ],
      "properties": {
        "count": "integer >=1",
        "method": "enum[manual,import]"
      },
      "category": "Onboarding"
    },
    {
      "name": "SelectScale",
      "description": "User selects an assessment scale to use for an evaluation.",
      "required_properties": [
        "scale"
      ],
      "properties": {
        "scale": "enum[GENCAT,Barthel,Lawton-Brody,Other]"
      },
      "category": "Onboarding"
    },
    {
      "name": "SubmitAssessment",
      "description": "User completes and submits an assessment.",
      "required_properties": [
        "duration_sec"
      ],
      "properties": {
        "duration_sec": "integer >= 0",
        "has_missing_fields": "boolean",
        "items_count": "integer >= 0"
      },
      "category": "Core Value"
    },
    {
      "name": "GenerateReport",
      "description": "Escaly generates a report from an assessment.",
      "required_properties": [
        "report_type"
      ],
      "properties": {
        "report_type": "enum[Individual,Summary,Board]",
        "format": "enum[PDF,HTML]",
        "shared": "boolean",
        "shared_channel": "enum[email,link,download,null]"
      },
      "category": "Core Value"
    },
    {
      "name": "InviteTeammate",
      "description": "Admin invites another teammate.",
      "required_properties": [
        "method"
      ],
      "properties": {
        "method": "enum[email,link]"
      },
      "category": "Expansion"
    },
    {
      "name": "UpgradePlan",
      "description": "Account upgrades paid tier or usage quota.",
      "required_properties": [
        "plan_id"
      ],
      "properties": {
        "plan_id": "string",
        "billing_model": "enum[flat,usage,mixed]"
      },
      "category": "Monetization"
    }
  ],
  "derived_metrics": [
    {
      "name": "TimeToValue",
      "formula": "min(ts(GenerateReport)) - ts(Signup) per user",
      "unit": "hours"
    },
    {
      "name": "ActivationRate7d",
      "formula": "activated_users_7d / new_users",
      "unit": "percentage"
    },
    {
      "name": "ReportShareRate",
      "formula": "count(GenerateReport where shared=true) / count(GenerateReport)",
      "unit": "percentage"
    }
  ],
  "governance": {
    "naming_conventions": "SnakeCase for properties; PascalCase for events.",
    "pii_policy": "No PII in event names/properties; user_id/account_id are internal UUIDs.",
    "owner_review": "Changes via PR with product + engineering approvals."
  }
}